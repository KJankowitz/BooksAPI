<%- include('partials/header.ejs'); -%>


<h1 style="text-align: center; margin: 10px">Add a new book</h1>
<div class="new_form">
<form action="/new" method="post">
  <p>Book title:</p>
  <input type="text" name="book_title" autocomplete="off">

  <p>Book author:</p>
  <input type="text" name="author" autocomplete="off">

  <p>Book ISBN number:</p>
  <input type="number" name="isbn" autocomplete="off">

  <p>Book rating:</p>
  <input type="number" name="rating" min="0" max="10" placeholder="rating/10" autocomplete="off">

  <p>Date completed:</p>
  <input type="date" name="date_completed" placeholder="yyyy-mm-dd" autocomplete="off">

  <p>Notes:</p>
  <textarea name="note" autocomplete="off"></textarea>

  <div class="spacer"></div>
  <button class="btn btn-primary m-2" type="submit">Add</button>
</form>
</div>

<%- include('partials/footer.ejs'); -%>